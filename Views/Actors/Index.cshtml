@model IEnumerable<MoviesManager.Models.ActorView>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (ViewBag.AdminAccess)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CountryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.PhotoId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryName)
            </td>
            <td>
                @item.BirthDate.ToLongDateString()
            </td>
            <td>
                <div style="width:50px; height:70px; background: url(@Url.Content(item.GetPhotoURL())) no-repeat center center; background-size: cover;"></div>
            </td>

            @if (ViewBag.AdminAccess)
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </td>
            }

        </tr>
    }

</table>
